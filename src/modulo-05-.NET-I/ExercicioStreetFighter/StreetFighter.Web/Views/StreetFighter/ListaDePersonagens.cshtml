@model List<StreetFighter.Dominio.Personagem>
@{
    ViewBag.Title = "ListaDePersonagens";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="inicio">
    <h2>Lista de Personagens </h2>
</div>

@using (Html.BeginForm("Cadastro", "StreetFighter", FormMethod.Post, new { @class = "form-horizontal" }))
{

    <button type="submit" class="btn btn-default">Cadastrar</button>
}

        @{
            foreach (var personagem in Model)
            {
                <tr>
                    <td><strong>@Html.ActionLink(personagem.Nome, "FichaTecnica", new { id = personagem.Id })</strong></td>
                    <td><input type="button" value="Editar" style="width: 66px;" onclick="location.href='@Url.Action("Editar", "StreetFighter", new { id = personagem.Id })'" /></td>
                </tr>
            }
        }